---
import { Icon } from "astro-icon";
import StackCard from "./StackCard.astro";
---

<section id="stacks" class="flex flex-col gap-4 py-32 items-center">
  <div class="flex gap-7 flex-wrap justify-center">
    <StackCard
      icon="simple-icons:react"
      iconSize={40}
      link="https://reactjs.org/"
      textSize="xl"
      title="React"
    />
    <StackCard
      icon="simple-icons:javascript"
      iconSize={40}
      link="https://www.javascript.com/"
      textSize="xl"
      title="JavaScript"
    />
    <StackCard
      icon="simple-icons:typescript"
      iconSize={40}
      link="https://www.typescriptlang.org/"
      textSize="xl"
      title="TypeScript"
    />
    <StackCard
      icon="simple-icons:nodedotjs"
      iconSize={40}
      link="https://expressjs.com/"
      textSize="xl"
      title="Node Express"
    />
  </div>
  <div class="flex gap-6 flex-wrap justify-center">
    <StackCard
      icon="simple-icons:tailwindcss"
      iconSize={36}
      link="https://tailwindcss.com/"
      textSize="lg"
      title="TailwindCSS"
    />
    <StackCard
      icon="simple-icons:expo"
      iconSize={30}
      link="https://expo.dev/"
      textSize="lg"
      title="Expo"
    />
    <StackCard
      icon="simple-icons:nextdotjs"
      iconSize={36}
      link="https://nextjs.org/"
      textSize="lg"
      title="Next"
    />
    <StackCard
      icon="simple-icons:html5"
      iconSize={36}
      link="https://developer.mozilla.org/pt-BR/docs/Web/HTML"
      textSize="lg"
      title="HTML"
    />
    <StackCard
      icon="cib:figma"
      iconSize={36}
      link="https://www.figma.com/"
      textSize="lg"
      title="Figma"
    />
  </div>
  <div class="flex gap-5 flex-wrap justify-center">
    <StackCard
      icon="simple-icons:astro"
      iconSize={32}
      link="https://astro.build/"
      textSize="base"
      title="CSS"
    />
    <StackCard
      icon="simple-icons:css3"
      iconSize={32}
      link="https://developer.mozilla.org/pt-BR/docs/Web/CSS"
      textSize="base"
      title="CSS"
    />
    <StackCard
      icon="simple-icons:prisma"
      iconSize={32}
      link="https://www.prisma.io/"
      textSize="base"
      title="Prisma"
    />
    <StackCard
      icon="simple-icons:postgresql"
      iconSize={32}
      link="https://www.postgresql.org/"
      textSize="base"
      title="PostgreSQL"
    />
    <a
      class="flex gap-3 px-3 py-2 items-center rounded-md text-base font-medium bg-slate-800"
      href="https://qwik.builder.io/"
      target="_blank"
      rel="noopener noreferrer"
    >
      Qwik
      <img class="h-7" src="/qwik-white.png" alt="Qwik logo" />
    </a>
    <StackCard
      icon="simple-icons:railway"
      iconSize={32}
      link="https://railway.app/"
      textSize="base"
      title="Railway"
    />
  </div>
</section>
